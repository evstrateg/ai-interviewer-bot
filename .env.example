# AI Interviewer Bot Configuration
# Copy this file to .env and fill in your actual values

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Anthropic Claude API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Bot Configuration
BOT_USERNAME=your_bot_username
BOT_NAME="AI Interviewer"

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Session Management
SESSION_TIMEOUT_MINUTES=180
MAX_CONVERSATION_HISTORY=100

# Optional: Claude API Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.7

# Optional: Redis for session storage (for production)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Optional: Database Configuration (for persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_interviewer
# DATABASE_POOL_SIZE=10